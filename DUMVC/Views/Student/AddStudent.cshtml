@using DUMVC.DTO
@model StudentViewMod
<h2>New Student Registration</h2>
<form method="post">
    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <input type="text" class="form-control" asp-for="@Model.studentDTO.FirstName">
        <span asp-validation-for="@Model.studentDTO.FirstName" style="color:red"></span>
    </div>
    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <input type="text" class="form-control" asp-for="@Model.studentDTO.LastName">
        <span asp-validation-for="@Model.studentDTO.LastName" style="color:red"></span>
    </div>
    <div class="form-group">
        <label for="DOB">DOB:</label>
        <input type="date" class="form-control" asp-for="@Model.studentDTO.DOB">
        <span asp-validation-for="@Model.studentDTO.DOB" style="color:red"></span>
    </div>
    <div class="form-group">
        <label>Course:</label>
        <select asp-for="@Model.studentDTO.Course_Id" asp-items="@ViewBag.Courses" class="form-select"></select>
    </div>
    <div class="form-group">
        <label for="hobbies">Hobbies:</label>
        <select asp-for="@Model.hobby" asp-items="@ViewBag.Hobbies" class="form-select" multiple></select>
        @*<input type="checkbox" class="form-check" asp-for="@Model.hobby." asp-items="@ViewBag.Hobbies">*@
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-dark">Submit</button>
    </div>

</form>