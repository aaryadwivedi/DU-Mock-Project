<h2>Edit User </h2>
<form method="post">

    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <input type="text" class="form-control" asp-for="@Model.studentDTO.FirstName">
        <span asp-validation-for="@Model.studentDTO.FirstName" style="color:red"></span>
    </div>
    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <input type="text" class="form-control" asp-for="@Model.studentDTO.LastName">
        <span asp-validation-for="@Model.studentDTO.LastName" style="color:red"></span>
    </div>
    <div class="form-group">
        <label for="DOB">DOB:</label>
        <input type="date" class="form-control" asp-for="@Model.studentDTO.DOB">
        <span asp-validation-for="@Model.studentDTO.DOB" style="color:red"></span>
    </div>
    <div class="form-group">
        <label>Course:</label>
        <select asp-for="@Model.studentDTO.Course_Id" asp-items="@ViewBag.list" class="form-select"></select>
    </div>
